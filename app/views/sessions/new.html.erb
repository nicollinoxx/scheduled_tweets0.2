<h1>Sing_in</h1>

<%= form_with url: sign_in_path do |form| %>
  <div class="mb-3">
  <%= form.label :email %>
  <%= form.text_field :email, class: 'form-control', placeholder: 'nicolas@gmail.com' %>
  </div>

  <div class="mb-3">
  <%= form.label :password %>
  <%= form.password_field :password, class: 'form-control', placeholder: 'password'%>
  <%= link_to 'Forgout your password', password_reset_path %>
  </div>

  <div class="mb-3">
   <%= form.submit 'Sign-in', class: 'btn btn-primary' %>
  </div>
<% end %>
